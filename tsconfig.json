{
  "compilerOptions": {
    /* File Layout */
    "rootDir": "./src",
    "outDir": "./dist",
    /* Environment */
    "target": "ES2020",
    "module": "CommonJS",
    "lib": [
      "ES2020"
    ], // enable modern APIs
    "types": [
      "node"
    ],
    /* Emit */
    "sourceMap": true,
    "declaration": true,
    /* Strictness */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": [
    "src"
  ], // compile files in src/
  "exclude": [
    "node_modules"
  ]
}